-# app/views/layout/_select_dates.html.haml
-# %h1.text-2xl.font-bold Select Date Range

= form_with url: lists_path, method: :get, local: true, data: { controller: "date-range" } do
  = hidden_field_tag :start_date, @start_date, data: { "date-range-target": "startInput" }
  = hidden_field_tag :end_date, @end_date, data: { "date-range-target": "endInput" }

  .rounded-xl.bg-slate-900.p-4.text-white.shadow-xl
    .flex.items-center.justify-between
      %button{ type: "button", class: "rounded-md p-2 text-slate-300 hover:text-white hover:bg-slate-800", data: { action: "date-range#prevMonth" }, "aria-label" => "Previous month" }
        &larr;
      %div.text-sm.font-semibold{ data: { "date-range-target": "monthLabel" } }
      %button{ type: "button", class: "rounded-md p-2 text-slate-300 hover:text-white hover:bg-slate-800", data: { action: "date-range#nextMonth" }, "aria-label" => "Next month" }
        &rarr;

    %div{ class: "mt-3 grid grid-cols-7 text-center text-[10px] uppercase tracking-wider text-slate-400" }
      %span M
      %span T
      %span W
      %span T
      %span F
      %span S
      %span S

    .mt-2.grid.grid-cols-7.gap-1{ data: { "date-range-target": "grid" } }

    %div{ class: "mt-3 flex items-center justify-between text-[11px] text-slate-400" }
      %div{ data: { "date-range-target": "rangeLabel" } } Select a start date
      %button{ type: "button", class: "rounded-md px-2 py-1 text-slate-300 hover:text-white hover:bg-slate-800", data: { action: "date-range#clear" } }
        Clear

    .mt-3.flex.items-center.justify-end
      = submit_tag "Apply", class: "rounded-md bg-emerald-600 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-emerald-700"

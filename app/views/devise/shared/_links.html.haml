- links = []
- links << { text: "Log In", path: new_session_path(resource_name) } if controller_name != 'sessions'
- if devise_mapping.omniauthable? && controller_name != 'sessions'
  - resource_class.omniauth_providers.each do |provider|
    - label = provider == :google_oauth2 ? "Login with Google" : "Sign in with #{OmniAuth::Utils.camelize(provider)}"
    - links << { text: label, path: omniauth_authorize_path(resource_name, provider), button: true, provider: provider }
- links << { text: "Sign Up", path: new_registration_path(resource_name) } if devise_mapping.registerable? && controller_name != 'registrations'
- links << { text: "Forgot your password?", path: new_password_path(resource_name) } if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
- links << { text: "Didn't receive confirmation instructions?", path: new_confirmation_path(resource_name) } if devise_mapping.confirmable? && controller_name != 'confirmations'
- links << { text: "Didn't receive unlock instructions?", path: new_unlock_path(resource_name) } if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
- if links.any?
  %div.flex.items-center
    - links.each_with_index do |link, index|
      - if link[:button] && link[:provider] == :google_oauth2
        = button_to link[:path], data: { turbo: false }, class: "inline-flex items-center gap-1 text-blue-600 hover:underline", form_class: "inline" do
          %svg.h-4.w-4{ viewBox: "0 0 48 48", aria: { hidden: "true" } }
            %path{ fill: "#EA4335", d: "M24 9.5c3.54 0 6.68 1.22 9.16 3.22l6.84-6.84C35.64 2.34 30.14 0 24 0 14.62 0 6.6 5.38 2.7 13.2l7.95 6.18C12.36 13.16 17.74 9.5 24 9.5z" }
            %path{ fill: "#4285F4", d: "M46.1 24.55c0-1.64-.15-3.21-.42-4.73H24v9.02h12.4c-.54 2.9-2.19 5.35-4.67 7.01l7.18 5.57C42.94 37.5 46.1 31.6 46.1 24.55z" }
            %path{ fill: "#FBBC05", d: "M10.65 28.38a14.9 14.9 0 0 1 0-8.76l-7.95-6.18A23.93 23.93 0 0 0 0 24c0 3.9.94 7.59 2.7 10.56l7.95-6.18z" }
            %path{ fill: "#34A853", d: "M24 48c6.14 0 11.64-2.02 15.52-5.46l-7.18-5.57c-2 1.35-4.55 2.15-8.34 2.15-6.26 0-11.64-3.66-13.35-9.38l-7.95 6.18C6.6 42.62 14.62 48 24 48z" }
          %span= link[:text]
      - elsif link[:button]
        = button_to link[:text], link[:path], data: { turbo: false }, class: "text-blue-600 hover:underline"
      - else
        = link_to link[:text], link[:path], class: "text-blue-600 hover:underline"
      - unless index == links.size - 1
        %span.mx-2.text-gray-500
          |

%body.bg-background
  .bg-background
    .relative.isolate.px-6.pt-14.lg:px-8.mx-auto
      .mx-auto.max-w-2xl.py-32.sm:py-48.lg:py-56
        %h2.text-2xl.font-bold.mb-4.text-center Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .space-y-4
            .field
              %div.text-left
                = f.label :email, class: "block text-sm font-medium text-gray-700"
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
            .field
              %div.text-left
                = f.label :password, class: "block text-sm font-medium text-gray-700"
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
              = f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
            .field
              %div.text-left
                = f.label :password_confirmation, class: "block text-sm font-medium text-gray-700"
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
            .actions
              %span{class: "sm:ml-1"}
                = f.submit "Sign up", class: "w-64 h2 inline-flex items-center rounded-md bg-gray-400 px-3 py-2 text-xl font-semibold text-white shadow-sm hover:bg-gray-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray"
        = render "devise/shared/links"

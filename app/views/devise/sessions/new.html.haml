%body.bg-background
  .bg-background
    .relative.isolate.px-6.pt-14.lg:px-8.mx-auto
      .mx-auto.max-w-2xl.py-32.sm:py-48.lg:py-56
        %h2.text-2xl.font-bold.mb-4.text-center Log in
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4', id: "login-form" }) do |f|
          .space-y-4
            .field
              %div.text-left
                = f.label :email, class: "block text-sm font-medium text-gray-700"
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
            .field
              %div.text-left
                = f.label :password, class: "block text-sm font-medium text-gray-700"
              = f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"
            - if devise_mapping.rememberable?
              .field.flex.items-center
                = f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500"
                %label.ml-2{for: "user_remember_me", class: "block text-sm font-medium text-gray-700"}
                  Remember me
        .actions
          .flex.flex-wrap.items-center.gap-3
            %button{ type: "submit", form: "login-form", class: "w-64 h2 inline-flex items-center justify-center rounded-md bg-gray-400 px-3 py-2 text-xl font-semibold text-white shadow-sm hover:bg-gray-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray" }
              Log in
            = button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "w-64 inline-flex items-center justify-center gap-2 rounded-md border border-gray-300 bg-white px-3 py-2 text-xl font-semibold text-gray-700 hover:bg-gray-50", form_class: "inline" do
              %svg.h-5.w-5{ viewBox: "0 0 48 48", aria: { hidden: "true" } }
                %path{ fill: "#EA4335", d: "M24 9.5c3.54 0 6.68 1.22 9.16 3.22l6.84-6.84C35.64 2.34 30.14 0 24 0 14.62 0 6.6 5.38 2.7 13.2l7.95 6.18C12.36 13.16 17.74 9.5 24 9.5z" }
                %path{ fill: "#4285F4", d: "M46.1 24.55c0-1.64-.15-3.21-.42-4.73H24v9.02h12.4c-.54 2.9-2.19 5.35-4.67 7.01l7.18 5.57C42.94 37.5 46.1 31.6 46.1 24.55z" }
                %path{ fill: "#FBBC05", d: "M10.65 28.38a14.9 14.9 0 0 1 0-8.76l-7.95-6.18A23.93 23.93 0 0 0 0 24c0 3.9.94 7.59 2.7 10.56l7.95-6.18z" }
                %path{ fill: "#34A853", d: "M24 48c6.14 0 11.64-2.02 15.52-5.46l-7.18-5.57c-2 1.35-4.55 2.15-8.34 2.15-6.26 0-11.64-3.66-13.35-9.38l-7.95 6.18C6.6 42.62 14.62 48 24 48z" }
              %span Login with Google
        %span{class: "sm:mt-4"}
          = render "devise/shared/links"

- if @list.persisted?
  %form{ action: list_path(@list), method: "post" }
    %input{ type: "hidden", name: "_method", value: "patch" }

    - if @list.errors.any?
      = render 'error'

    = render 'form_field'

    .actions
      %input.bg-blue-500.hover:bg-blue-700.text-white.font-bold.py-2.px-4.rounded.focus:outline-none.focus:shadow-outline{ type: "submit", value: "Save" }

- else
  %form{ action: lists_path, method: "post" }

    - if @list.errors.any?
      = render 'error'

    = render 'form_field'
 
    .actions
      %input.bg-blue-500.hover:bg-blue-700.text-white.font-bold.py-2.px-4.rounded.focus:outline-none.focus:shadow-outline{ type: "submit", value: "Save" }

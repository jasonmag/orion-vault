= form_for @list, data: { controller: "effective-date" } do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :price
    = f.text_field :price

  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :due_date
    = f.date_field :due_date

  .field
    = f.label :effective_start_date
    = f.date_field :effective_start_date, value: @list.effective_start_date || Date.today, data: { target: "effective-date.startDate", action: "change->effective-date#updateStartDate" }

  .field
    = f.label :effective_end_date
    = f.date_field :effective_end_date, value: @list.effective_end_date, data: { target: "effective-date.endDate" }

  .actions
    = f.submit 'Save'

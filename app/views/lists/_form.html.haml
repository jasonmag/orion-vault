= form_for @list, data: { controller: "effective-date" } do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :price
    = f.number_field :price, step: "0.01"

  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :effective_start_date
    = f.date_field :effective_start_date, value: @list.effective_start_date || Date.today, data: { target: "effective-date.startDate", action: "change->effective-date#updateStartDate" }

  .field
    = f.label :effective_end_date
    = f.date_field :effective_end_date, value: @list.effective_end_date, data: { target: "effective-date.endDate" }

  .payment_schedule_fields
    = f.fields_for :payment_schedule do |ps|
      .field
        = ps.label :frequency
        = ps.select :frequency, ['monthly', 'weekly', 'bi-weekly', 'yearly'], prompt: "Select Frequency"

      .field
        = ps.label :day_of_month
        = ps.number_field :day_of_month

      .field
        = ps.label :day_of_week
        = ps.number_field :day_of_week

      .field
        = ps.label :month_of_year
        = ps.number_field :month_of_year

      .field
        = ps.label :notification_lead_time
        = ps.number_field :notification_lead_time

  .actions
    = f.submit "Save"

%body.bg-background
  .bg-background
    .relative.isolate.px-6.pt-8.lg:px-8.mx-auto
      .mx-auto.max-w-2xl.py-16.sm:py-24.lg:py-28
        .flex.items-center.justify-between.mb-6
          %div
            %h1.text-2xl.font-bold Edit list
            %p.text-sm.text-gray-600 Update pricing, dates, and schedule.
          .flex.items-center.gap-3
            = link_to 'View', @list, class: "text-sm font-semibold text-gray-700 hover:text-gray-900"
            = link_to 'Back to Dues', lists_path, class: "text-sm font-semibold text-gray-700 hover:text-gray-900"

        .rounded-xl.border.border-gray-200.bg-white.p-6.shadow-sm
          = render 'form'
